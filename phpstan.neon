includes:
    - vendor/phpstan/phpstan/conf/bleedingEdge.neon
    - vendor/szepeviktor/phpstan-wordpress/extension.neon
parameters:
    #level: max
    level: 2
    paths:
        - %currentWorkingDirectory%/woocommerce-wirecard-checkout-page/class-woocommerce-wcp-gateway.php
        - %currentWorkingDirectory%/woocommerce-wirecard-checkout-page/classes/class-woocommerce-wcp-payments.php
        - %currentWorkingDirectory%/woocommerce-wirecard-checkout-page/classes/class-woocommerce-wcp-config.php
    bootstrap: %currentWorkingDirectory%/woocommerce-wirecard-checkout-page/vendor/autoload.php
    autoload_files:
        # Missing constants, function and class stubs
        - %currentWorkingDirectory%/tests/bootstrap.php
        # Plugin stubs
        - %currentWorkingDirectory%/tests/woocommerce-stubs-3.6.1.php
        # Plugin files
        - %currentWorkingDirectory%/woocommerce-wirecard-checkout-page/class-woocommerce-wcp-gateway.php
        - %currentWorkingDirectory%/woocommerce-wirecard-checkout-page/classes/class-woocommerce-wcp-payments.php
        - %currentWorkingDirectory%/woocommerce-wirecard-checkout-page/classes/class-woocommerce-wcp-config.php
    ignoreErrors:
        # Uses func_get_args()
        - '#^Function apply_filters invoked with [34567] parameters, 2 required\.$#'
        - '#^Function do_action invoked with [3456] parameters, 1-2 required\.$#'
        - '#^Function current_user_can invoked with 2 parameters, 1 required\.$#'
        - '#^Function add_query_arg invoked with [123] parameters?, 0 required\.$#'
        - '#^Function add_theme_support invoked with [2345] parameters, 1 required\.$#'
        # https://core.trac.wordpress.org/ticket/43304
        - '/^Parameter #2 \$deprecated of function load_plugin_textdomain expects string, false given\.$/'
        # WP-CLI accepts a class as callable
        - '/^Parameter #2 \$callable of static method WP_CLI::add_command\(\) expects callable\(\): mixed, \S+ given\.$/'
